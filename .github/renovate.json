{
  "extends": [
    "config:base",
    ":disableRateLimiting"
  ],
  "ignoreTests": true,
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "automergeType": "pr"
    }
  ],
  "kubernetes": {
    "fileMatch": ["\\.yaml$"]
  },
  "argocd": {
    "fileMatch": ["applications/.+\\.yaml$"]
  },
  "regexManagers": [
    {
      "fileMatch": ["bootstrap-applications/templates/-1-kube-prometheus-stack-crds.yaml$"],
      "matchStrings": [
        "repoURL: (?<depName>.*?)\\n'",
        "targetRevision: .*\\D-(?<currentValue>.*?)\\n"
      ],
      "datasourceTemplate": "{{#if datasource}}{{{datasource}}}{{else}}git-tags{{/if}}"
    }
  ]
}