{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":disableRateLimiting"
  ],
  "enabledManagers": [ "argocd", "helmv3", "kubernetes"],
  "ignoreTests": true,
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "automergeType": "pr"
    }
  ],
  "argocd": {
    "fileMatch": [ "applications/templates/.+\\.yaml$", "bootstrap-applications/templates/.+\\.yaml$" ]
  },
  "kubernetes": {
    "fileMatch": [ "applications/templates/plex-meta-manager/cronjob\\.yaml$"]
  }
}