{
  "extends": [
    "config:base",
    ":disableRateLimiting"
  ],
  "ignoreTests": true,
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "kubernetes": {
    "fileMatch": ["\\.yaml$"]
  }
}
